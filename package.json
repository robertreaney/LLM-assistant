{
  "name": "llm-assistant",
  "displayName": "LLM-Assistant",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "llm-assistant.generateCode",
        "title": "Generate Code"
      },
      {
        "command": "llm-assistant.giveTime",
        "title": "Current Time"
      },
      {
        "command": "llm-assistant.viewTitle",
        "title": "View LLM Title"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "llm-assistant",
          "name": "LLM Assistant",
          "contextualTitle": "LLM Assistant - AI Generated Code"

        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "llm-assistant.viewTitle",
          "when": "view == llm-assistant",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "openai": "^3.2.1"
  }
}
